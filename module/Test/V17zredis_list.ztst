>correct
>correct

 zrtie -d db/redis -f $db1 alist
 zrtie -d db/redis -f $db2 alist2
 alist=( "漢字" )
 echo $alist
 zruntie alist
 zrtie -d db/redis -f $db1 alist
 echo $alist
 zruntie alist
 key="ab"$'\0'"ef"
 alist2=( $key )
 zruntie alist2
 zrtie -d db/redis -f $db2 alist2
 [[ "$alist2" = "$key" ]] && echo correct
 zruntie alist2
0:Unicode & metafication test
>漢字
>漢字
